import gi
gi.require_version("Gtk", "3.0")
gi.require_version('Wnck', '3.0')
from gi.repository import Gtk, Wnck, Gdk, Gio, GdkX11
import subprocess
import time
import ast
import charpaste
import sys
import dbus


